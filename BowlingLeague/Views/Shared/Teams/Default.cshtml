@model IEnumerable<String>

<div class="d-flex flex-wrap justify-content-center">
    <div>
        <a asp-controller="Home" asp-action="Index" asp-route-team=""
           class="btn btn-primary-outline btn-sm @(ViewBag.selected == null || ViewBag.selected =="" ? "active" : "")">
            All
        </a>
    </div>
    @foreach (var team in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-team="@team"
           class="btn btn-primary-outline btn-sm @(ViewBag.selected == team ? "active" : "")">
            @team
        </a>
    }
</div>
